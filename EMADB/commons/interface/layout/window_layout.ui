    <string notr="true">/* soft-solid-blue-solid.qss â€“ flat pale-blue background with blue buttons */

/* 1. Base window/background */
QWidget {
    background-color: #e3f2fd;            /* solid pale sky blue */
    color: #2e3a46;                       /* dark slate for text */
    font-family: &quot;Segoe UI&quot;, sans-serif;
    font-size: 10pt;
}

/* 2. Labels */
QLabel {
    background-color: transparent;
    color: inherit;
    padding: 2px;
}

/* 3. Buttons */
QPushButton {
    background-color: #90caf9;            /* light sky blue */
    border: 1px solid #64b5f6;
    border-radius: 4px;
    padding: 6px 12px;
}
QPushButton:hover {
    background-color: #64b5f6;
}
QPushButton:pressed {
    background-color: #42a5f5;
}

/* 4. Line edits and text areas */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    border: 1px solid #cfd8dc;
    border-radius: 4px;
    padding: 4px;
}
QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #90a4ae;
}

/* 5. Combo boxes */
QComboBox {
    background-color: #ffffff;
    border: 1px solid #cfd8dc;
    border-radius: 4px;
    padding: 4px 24px 4px 8px;
}
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 16px;
    border-left: 1px solid #cfd8dc;
}

/* 6. Tabs */
QTabWidget::pane {
    border: 1px solid #cfd8dc;
    border-radius: 4px;
}
QTabBar::tab {
    background: #90caf9;
    border: 1px solid #64b5f6;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 6px 12px;
    margin-right: -1px;
}
QTabBar::tab:selected {
    background: #ffffff;
    border-color: #64b5f6;
}

/* 7. Scrollbars */
QScrollBar:vertical {
    background: #eceff1;
    width: 8px;
    margin: 16px 0 16px 0;
    border-radius: 4px;
}
QScrollBar::handle:vertical {
    background: #cfd8dc;
    min-height: 20px;
    border-radius: 4px;
}
QScrollBar::handle:vertical:hover {
    background: #b0bec5;
}
QScrollBar::add-line, QScrollBar::sub-line {
    height: 0;
}

/* 8. Menu bar &amp; menus */
QMenuBar {
    background-color: #e3f2fd;
    border: 1px solid #cfd8dc;
}
QMenuBar::item {
    spacing: 3px;
    padding: 4px 10px;
}
QMenuBar::item:selected {
    background: #90caf9;
}
QMenu {
    background-color: #ffffff;
    border: 1px solid #cfd8dc;
}
QMenu::item {
    padding: 4px 24px 4px 20px;
}
QMenu::item:selected {
    background-color: #90caf9;
}

/* 9. Tooltips */
QToolTip {
    background-color: #fff9c4;
    color: #2e3a46;
    border: 1px solid #cfd8dc;
    padding: 4px;
    border-radius: 4px;
}

/* 10. Headers (QTreeView/QTableView) */
QHeaderView::section {
    background-color: #90caf9;
    padding: 4px;
    border: 1px solid #64b5f6;
}

/* 11. Tables and lists */
QTableView, QListView, QTreeView {
    background-color: #ffffff;
    gridline-color: #eceff1;
    alternate-background-color: #e3f2fd;
}
QTableView::item:selected, QListView::item:selected, QTreeView::item:selected {
    background-color: #64b5f6;
    color: #ffffff;
}
</string>
